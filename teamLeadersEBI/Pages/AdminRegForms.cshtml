@page
@using static teamLeadersEBI.Pages.AdminRegFormsModel
@model teamLeadersEBI.Pages.AdminRegFormsModel

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>$(document).ready(function () {
        $(".reject-button").click(function () {
            $(this).closest("tr").find(".reject-container").toggle();
        });
    });</script>

<!DOCTYPE html>
<html>
<head>
    <title>Registration Forms</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: center;
            padding: 8px;
        }

        th {
            background-color: lightblue;
        }
    </style>
</head>
<body>
    <div class="bg-primary text-white p-3 rounded" style="position: absolute; top: 0; left: 50%; transform: translateX(-50%); width: 250px; height: 150px; display: flex; flex-direction: column; justify-content: center; align-items: center; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); margin-top: 95px; z-index: 1;">
        <h5 class="card-title" style="font-size: 35px;">Form Registered</h5>
    </div>
    <div class="container text-center" style="display: flex; justify-content: center; align-items: center;">
        <div class="card shadow" style="padding: 20px; border: 2px solid #ccc; border-radius: 10px; margin-top: 150px;">
            <table>
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>National ID</th>
                        <th>Bank</th>
                        <th>Title</th>
                        <th>Representative Manager</th>
                        <th>Essay</th>
                        <th>Referral</th>
                        <th>Status</th>
                        <th>Reason</th>
                        <th>Date</th>
                        <th>
                            <div style="display: flex; align-items: center;">
                                Bank
                                <select id="filterBank">
                                    <option value="all">All</option>
                                    @foreach (var bankName in ViewData["BankNames"] as IEnumerable<string>)
                                    {
                                        <option value="@bankName">@bankName</option>
                                    }
                                </select>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var form in ViewData["Forms"] as IEnumerable<AdminRegFormsModel.FormInfo>)
                    {

                        @if (!string.IsNullOrWhiteSpace(form.FormStatus))
                        {
                            <tr>
                                <td>@form.FName</td>
                                <td>@form.NID</td>
                                <td>@form.Bank</td>
                                <td>@form.Title</td>
                                <td>@form.RepM</td>
                                <td>@form.Essay</td>
                                <td>@form.Referral</td>
                                <td>@form.FormStatus</td>
                                <td>@form.StatusReason</td>
                                <td>@form.Date.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
<script>$(document).ready(function () {
        $("#filterBank").change(function () {
            var selectedBank = $(this).val();

            $("tbody tr").each(function () {
                var bankColumn = $(this).find("td:nth-child(3)").text();
                if (selectedBank === "all" || bankColumn.toLowerCase() === selectedBank.toLowerCase()) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });
    });</script>
</html>
