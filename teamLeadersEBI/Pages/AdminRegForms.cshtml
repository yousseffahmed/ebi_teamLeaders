@page
@using static teamLeadersEBI.Pages.AdminRegFormsModel
@model teamLeadersEBI.Pages.AdminRegFormsModel

<!DOCTYPE html>
<html>
<head>
    <title>Registration Forms</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Registration Forms</h1>

    <a href="/RegRequests" class="btn">Form Requests</a> <!-- Add this button -->

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>National ID</th>
                <th>Bank</th>
                <th>Title</th>
                <th>Representative Manager</th>
                <th>Essay</th>
                <th>Referral</th>
                <th>Status</th>
                <th>Reason</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var form in ViewData["Forms"] as IEnumerable<AdminRegFormsModel.FormInfo>)
            {

                @if (!string.IsNullOrWhiteSpace(form.FormStatus))
                {
                    <tr>
                        <td>@form.Id</td>
                    <td>@form.FName</td>
                    <td>@form.NID</td>
                    <td>@form.Bank</td>
                    <td>@form.Title</td>
                    <td>@form.RepM</td>
                    <td>@form.Essay</td>
                    <td>@form.Referral</td>
                    <td>@form.FormStatus</td>
                    <td>@form.StatusReason</td>
                    <td>@form.Date.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>

                }
            }
        </tbody>
    </table>
</body>
</html>
